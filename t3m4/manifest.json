{
  "manifest_version": 2,
  "name": "t3m4 Poker Data Capture",
  "version": "0.1",
  "description": "Captures live poker game data from Bodog.eu",
  "permissions": ["tabs", "activeTab", "webRequest", "storage", "*://*.bodog.eu/*"],
  "content_scripts": [{
    "matches": ["*://*.bodog.eu/*"],
    "js": ["content.js"]
  }],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
